<%- model_class = Diagnosis -%>
<div class="page-header">
  <h1>Диагноз</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Код:</strong></dt>
  <dd><%= @diagnosis.code %></dd>
</dl>
<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @diagnosis.name.length > 30 ? @diagnosis.name[0, 27] + "..." : @diagnosis.name %></dd>
  <dt><strong>Специализация:</strong></dt>
  <dd><%= UserType.find(@diagnosis.user_type_id).name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Отмена",
              diagnoses_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_diagnosis_path(@diagnosis), :class => 'btn' %>
  <%= link_to "Удалить",
              diagnosis_path(@diagnosis),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
