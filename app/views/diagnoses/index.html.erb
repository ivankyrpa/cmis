<%- model_class = Diagnosis -%>
<div class="page-header">
  <h1>Диагнозы</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Код</th>
      <th>Название</th>
      <th>Специализация</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @diagnoses.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.code %></td>
        <td><%= diagnosis.name.length > 30 ? diagnosis.name[0, 27] + "..." : diagnosis.name %></td>
        <td><%= UserType.find(diagnosis.user_type_id).name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_diagnosis_path(diagnosis), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      diagnosis_path(diagnosis),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новый...",
            new_diagnosis_path,
            :class => 'btn btn-primary awhite' %>
