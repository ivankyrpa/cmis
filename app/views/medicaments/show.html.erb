<%- model_class = Medicament -%>
<div class="page-header">
  <h1>Препарат</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @medicament.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Отмена",
              medicaments_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_medicament_path(@medicament), :class => 'btn' %>
  <%= link_to "Удалить",
              medicament_path(@medicament),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
