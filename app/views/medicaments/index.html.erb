<%- model_class = Medicament -%>
<div class="page-header">
  <h1>Препараты</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @medicaments.each do |medicament| %>
      <tr>
        <td><%= medicament.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_medicament_path(medicament), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      medicament_path(medicament),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новый...",
            new_medicament_path,
            :class => 'btn btn-primary awhite' %>
