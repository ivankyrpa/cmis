<%= form_for @record, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :assignment_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :assignment_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :diagnosis_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :diagnosis_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_accessed, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_accessed, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :complaints, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :complaints, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :recommendation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :recommendation, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :doctor_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :doctor_name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary awhite' %>
    <%= link_to "Отмена",
                records_path, :class => 'btn' %>
  </div>
<% end %>
