<%- model_class = Region -%>
<div class="page-header">
  <h1>Область</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @region.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Назад",
              regions_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_region_path(@region), :class => 'btn' %>
  <%= link_to "Удалить",
              region_path(@region),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
