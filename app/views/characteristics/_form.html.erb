<%= form_for @characteristic, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Группа характеристик", :class => 'control-label' %>
    <div class="controls">
      <%=f.select(:group_id, Group.find_all_by_user_type_id(current_user.user_type_id).collect {|p| [ p.name, p.id ] }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Название", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label @first_val, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label @second_val, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :second_value, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary awhite' %>
    <%= link_to "Отмена",
                characteristics_path, :class => 'btn' %>
  </div>
<% end %>
