<%- model_class = FCharacteristic -%>
<div class="page-header">
  <h1>Характеристика</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Группа:</strong></dt>
  <dd><%= Group.find(@f_characteristic.group_id).name %></dd>
  <dt><strong>Название:</strong></dt>
  <dd><%= @f_characteristic.name %></dd>
  <dt><strong>Норма:</strong></dt>
  <dd><%= @f_characteristic.norm_c %></dd>
  <dt><strong>Отклонение:</strong></dt>
  <dd><%= @f_characteristic.dev_c %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Отмена",
              f_characteristics_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_f_characteristic_path(@f_characteristic), :class => 'btn' %>
  <%= link_to "Удалить",
              f_characteristic_path(@f_characteristic),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                         :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
