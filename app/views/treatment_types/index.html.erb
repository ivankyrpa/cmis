<%- model_class = TreatmentType -%>
<div class="page-header">
  <h1>Типы лечения</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @treatment_types.each do |treatment_type| %>
      <tr>
        <td><%= treatment_type.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_treatment_type_path(treatment_type), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      treatment_type_path(treatment_type),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if TreatmentType.all.length < 3 %>
<%= link_to "Новый...",
            new_treatment_type_path,
            :class => 'btn btn-primary awhite' %>
<% end %>
