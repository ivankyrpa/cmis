<%- model_class = TreatmentType -%>
<div class="page-header">
  <h1>Тип лечения</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @treatment_type.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Отмена",
              treatment_types_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_treatment_type_path(@treatment_type), :class => 'btn' %>
  <%= link_to "Удалить",
              treatment_type_path(@treatment_type),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
