<%- model_class = Operation -%>
<div class="page-header">
  <h1>Хирургическая операция</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @operation.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Отмена",
              operations_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_operation_path(@operation), :class => 'btn' %>
  <%= link_to "Удалить",
              operation_path(@operation),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
