<%- model_class = UserType -%>
<div class="page-header">
  <h1>Специализации</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Администратор</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @user_types.each do |user_type| %>
      <tr>
        <td><%= user_type.name %></td>
        <td><%= if user_type.admin
                  label_tag("Да")
                else
                  label_tag("Heт")
                end %></td>
        <td>
          <%= link_to "Изменить",
                      edit_user_type_path(user_type), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      user_type_path(user_type),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if UserType.all.length < 3 %>
<%= link_to "Новая...",
            new_user_type_path,
            :class => 'btn btn-primary awhite' %>
<% end %>
