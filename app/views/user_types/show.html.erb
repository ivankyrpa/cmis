<%- model_class = UserType -%>
<div class="page-header">
  <h1>Специализация</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @user_type.name %></dd>
  <dt><strong>Администратор:</strong></dt>
  <dd><%= if @user_type.admin
            label_tag("Да")
          else
            label_tag("Heт")
          end %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Отмена",
              user_types_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_user_type_path(@user_type), :class => 'btn' %>
  <%= link_to "Удалить",
              user_type_path(@user_type),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
