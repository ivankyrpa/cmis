<%- model_class = Group -%>
<div class="page-header">
  <h1>Группы характеристик</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Специализация</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= UserType.find(group.user_type_id).name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_group_path(group), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      group_path(group),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новая...",
            new_group_path,
            :class => 'btn btn-primary awhite' %>
