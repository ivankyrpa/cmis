<%= form_for @group, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Специализация", :class => 'control-label' %>
    <div class="controls">
      <%=f.select(:user_type_id, UserType.all.collect {|p| [ p.name, p.id ] }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Название", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary awhite' %>
    <%= link_to "Отмена",
                groups_path, :class => 'btn' %>
  </div>
<% end %>
