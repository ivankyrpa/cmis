<%- model_class = InsuranceType -%>
<div class="page-header">
  <h1>Типы страхования</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @insurance_types.each do |insurance_type| %>
      <tr>
        <td><%= insurance_type.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_insurance_type_path(insurance_type), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      insurance_type_path(insurance_type),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if InsuranceType.all.length < 2 %>
<%= link_to "Новый...",
            new_insurance_type_path,
            :class => 'btn btn-primary awhite' %>
<% end %>
