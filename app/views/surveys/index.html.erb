<div class="page-header">
  <h3>Пациенты</h3>
  <%= select_tag "pacients", options_from_collection_for_select(@pacients, "id", "lastname") %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Обследования</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= link_to "#{Pacient.find(survey.pacient_id).lastname}      #{survey.survey_date}", survey_path(survey) %></td>
        <td>
          <%= link_to "Удалить",
                      survey_path(survey),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                 :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Добавить обследование",
            new_survey_path,
            :class => 'btn btn-primary awhite' %>
