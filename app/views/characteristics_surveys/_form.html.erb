<%= form_for [@survey, @characteristics_survey], :html => { :class => 'form-horizontal'}  do |f| %>
  <div class="control-group">
    <%= f.label "Характеристика", :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:characteristic_id, @characteristics.collect {|p| [p.name, p.id]}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Значение", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary awhite' %>
  </div>
<% end %>
