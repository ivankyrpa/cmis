<%- model_class = CharacteristicsSurvey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:survey_id) %></th>
      <th><%= model_class.human_attribute_name(:characteristic_id) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:result) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @characteristics_surveys.each do |characteristics_survey| %>
      <tr>
        <td><%= link_to characteristics_survey.id, characteristics_survey_path(characteristics_survey) %></td>
        <td><%= characteristics_survey.survey_id %></td>
        <td><%= characteristics_survey.characteristic_id %></td>
        <td><%= characteristics_survey.value %></td>
        <td><%= characteristics_survey.result %></td>
        <td><%=l characteristics_survey.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_characteristics_survey_path(characteristics_survey), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      characteristics_survey_path(characteristics_survey),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_characteristics_survey_path,
            :class => 'btn btn-primary' %>
