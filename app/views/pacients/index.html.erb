<%- model_class = Pacient -%>
<div class="page-header">
  <h1>Пациенты</h1>
</div>

<div class="page-header">
    <%= form_tag pacients_path, :method => 'get', :id => 'pacients_search' do %>
      <div class="input-append pull-right">
        <%= text_field_tag :search, params[:search], :placeholder => 'Введите фамилию...', :class => 'span2 appendedInputButtons' %>
        <%= submit_tag "Поиск", :name => nil, :class => 'btn' %>
        <a href="#advanced" role="button" data-toggle="modal" class="btn btn-inverse">Расширенный поиск</a>
      </div>
    <% end %>
</div>

<!-- Advanced Modal -->
<div id="advanced" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="advancedSort" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Расширенный поиск</h3>
  </div>
  <div class="modal-body">
    <%= form_tag pacients_path, :method => 'get', :id => 'find_pacients' do %>
        <div class="row-fluid">
          <div class="span6">
            <h4>Фамилия</h4>
            <%= text_field_tag :lastn, params[:lastn], :placeholder => 'Фамилия' %>
          </div>
          <div class="span4">
            <h4>Имя</h4>
            <%= text_field_tag :firstn, params[:firstn], :placeholder => 'Имя' %>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <h4>Отчество</h4>
            <%= text_field_tag :middlen, params[:middlen], :placeholder => 'Отчество' %>
          </div>
          <div class="span3">
            <h4>Пол</h4>
            <div class="controls pull-right">
              <label class="radio">
                <%= radio_button_tag :male, params[:male], true %>
                мужской
              </label>
              <label class="radio">
                <%= radio_button_tag :male, params[:male], false %>
                женский
              </label>
              <label class="radio">
                <%= radio_button_tag :male, params[:male], false %>
                любой
              </label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <!--button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Искать</button-->
          <%= submit_tag "Искать", :name => nil, :class => 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>

<div id="pacients"><%= render 'pacients' %></div>

<%= link_to "Новый...",
            new_pacient_path,
            :class => 'btn btn-primary awhite' %>
