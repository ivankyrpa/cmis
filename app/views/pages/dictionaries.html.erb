      <div class="label_box" align="center" >
        <p>Местоположения </p>
      </div>
      <div >
      <label class="radio label_rbtn">
          <%= radio_button_tag 'dictionary', 'areas', true %>
                   Области
      </label>
      <label class="radio label_rbtn">
          <%= radio_button_tag 'dictionary', 'cities' %>
                   Города
      </label>
      <label class="radio label_rbtn">
          <%= radio_button_tag 'dictionary', 'streets' %>
                    Районы         
      </label>
      </div> 
     </div> 
     
     <div class="group_box round" align="left">
      <div class="label_box" align="center" >
        <p>Медицинские </p>
      </div>
      <div text-align="center" >
        <label class="radio label_rbtn">
          <%= radio_button_tag 'dictionary', 'diagnoz' %>
                    Диагнозы         
        </label>
        <label class="radio label_rbtn">
          <%= radio_button_tag 'dictionary', 'symptoms' %>
                    Симптомы         
        </label>
        <label class="radio label_rbtn">
          <%= radio_button_tag 'dictionary', 'analyzies' %>
                    Типы анализов       
