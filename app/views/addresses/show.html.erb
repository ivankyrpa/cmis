<%- model_class = Address -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:country_id) %>:</strong></dt>
  <dd><%= @address.country_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:region_id) %>:</strong></dt>
  <dd><%= @address.region_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @address.city_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:settlement_id) %>:</strong></dt>
  <dd><%= @address.settlement_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district_id) %>:</strong></dt>
  <dd><%= @address.district_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street_id) %>:</strong></dt>
  <dd><%= @address.street_id %></dd>
  <dt><strong><%= t(:house) %>:</strong></dt>
  <dd><%= @address.house %></dd>
  <dt><strong><%= t(:flat) %>:</strong></dt>
  <dd><%= @address.flat %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              addresses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_address_path(@address), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              address_path(@address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger awhite' %>
</div>
