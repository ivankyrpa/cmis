<%- model_class = City -%>
<div class="page-header">
  <h1>Города</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_city_path(city), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      city_path(city),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новый...",
            new_city_path,
            :class => 'btn btn-primary  awhite' %>
