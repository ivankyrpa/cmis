<%- model_class = Policy -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @policy.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:insurance_company_id) %>:</strong></dt>
  <dd><%= @policy.insurance_company_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:insurance_type_id) %>:</strong></dt>
  <dd><%= @policy.insurance_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pacient_id) %>:</strong></dt>
  <dd><%= @policy.pacient_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              policies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_policy_path(@policy), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              policy_path(@policy),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
