<%= form_for @policy, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :insurance_company_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :insurance_company_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :insurance_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :insurance_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pacient_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :pacient_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                policies_path, :class => 'btn' %>
  </div>
<% end %>
