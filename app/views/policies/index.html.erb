<%- model_class = Policy -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:insurance_company_id) %></th>
      <th><%= model_class.human_attribute_name(:insurance_type_id) %></th>
      <th><%= model_class.human_attribute_name(:pacient_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= link_to policy.id, policy_path(policy) %></td>
        <td><%= policy.number %></td>
        <td><%= policy.insurance_company_id %></td>
        <td><%= policy.insurance_type_id %></td>
        <td><%= policy.pacient_id %></td>
        <td><%=l policy.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_policy_path(policy), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      policy_path(policy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_policy_path,
            :class => 'btn btn-primary' %>
