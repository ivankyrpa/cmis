<%- model_class = AnalysisType -%>
<div class="page-header">
  <h1>Типы анализов</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @analysis_types.each do |analysis_type| %>
      <tr>
        <td><%= analysis_type.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_analysis_type_path(analysis_type), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      analysis_type_path(analysis_type),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новый...",
            new_analysis_type_path,
            :class => 'btn btn-primary awhite' %>
