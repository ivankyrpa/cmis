<%- model_class = Section -%>
<div class="page-header">
  <h1>Раздел</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @section.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Назад",
              sections_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_section_path(@section), :class => 'btn' %>
  <%= link_to "Удалить",
              section_path(@section),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
