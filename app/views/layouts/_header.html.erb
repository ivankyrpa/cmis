<header>
  <div class="btn-toolbar" style="margin: 0;">
    <% if signed_in? %>
        <%= link_to "Главная", login_path, :class => "btn btn-inverse" %>
        <% if admin? %>
          <div class="btn-group" >
            <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Администрирование
              <span class="caret"></span>
            </button>
              <ul class="dropdown-menu" >
                
                <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Пользователи</a>
                        <ul class="dropdown-menu">
                          <li><%= link_to "Создать", new_user_path, :tabindex => -1 %></li>
                          <li><%= link_to "Весь список", users_path, :tabindex => -1 %></li>
                        </ul>
                      </li>
                <li class="divider"></li>
                <li><%= link_to "Справочники", "#" %></li>
              </ul>
          </div>
        <% end %>
        <div class="btn-group" >
          <button class="btn dropdown-toggle" data-toggle="dropdown">
                      Помощь
            <span class="caret"></span>
          </button>
            <ul class="dropdown-menu" >
              <li><%= link_to "Контакты", contacts_path %></li>
              <li><%= link_to "О системе", about_path %></li>
            </ul>
        </div>
        <%= link_to "Выход", logout_path, :method => :delete, :class => "btn btn-danger" %>
      <% end %>
  </div>
</header>
