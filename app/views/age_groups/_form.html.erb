<%= form_for @age_group, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "От", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :from, :in => 0...120, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "До", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :to, :in => 0...120, :class => 'number_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
    <%= link_to "Отмена",
                age_groups_path, :class => 'btn' %>
  </div>
<% end %>
