<%- model_class = Symptom -%>
<div class="page-header">
  <h1>Симптомы</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @symptoms.each do |symptom| %>
      <tr>
        <td><%= symptom.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_symptom_path(symptom), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      symptom_path(symptom),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новый...",
            new_symptom_path,
            :class => 'btn btn-primary awhite' %>
