<%- model_class = Street -%>
<div class="page-header">
  <h1>Улица</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Название:</strong></dt>
  <dd><%= @street.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Назад",
              streets_path, :class => 'btn'  %>
  <%= link_to "Изменить",
              edit_street_path(@street), :class => 'btn' %>
  <%= link_to "Удалить",
              street_path(@street),
              :method => 'delete',
              :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
              :class => 'btn btn-danger awhite' %>
</div>
