<%- model_class = Street -%>
<div class="page-header">
  <h1>Улицы</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @streets.each do |street| %>
      <tr>
        <td><%= street.name %></td>
        <td>
          <%= link_to "Изменить",
                      edit_street_path(street), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      street_path(street),
                      :method => :delete,
                      :data => { :confirm => "Вы уверены?",
                                  :title => "Подтверждение удаления"  },
                      :class => 'btn btn-mini btn-danger awhite' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Новая...",
            new_street_path,
            :class => 'btn btn-primary awhite' %>
