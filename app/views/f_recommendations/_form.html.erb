<%= form_for @f_recommendation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :group_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :group_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :low_c, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :low_c, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :high_c, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :high_c, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :low_dc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :low_dc, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :high_dc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :high_dc, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                f_recommendations_path, :class => 'btn' %>
  </div>
<% end %>
