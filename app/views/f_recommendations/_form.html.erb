<%= form_for @f_recommendation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Группа характеристик", :class => 'control-label' %>
    <div class="controls">
      <%=f.select(:group_id, Group.find_all_by_user_type_id(current_user.user_type_id).collect {|p| [ p.name, p.id ] }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Текст рекомендации", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area', :rows => '3' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Нижняя граница компенсации", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :low_c, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Верхняя граница компенсации", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :high_c, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Нижняя граница декомпенсации", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :low_dc, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Верхняя граница декомпенсации", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :high_dc, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
    <%= link_to "Отмена",
                f_recommendations_path, :class => 'btn' %>
  </div>
<% end %>
